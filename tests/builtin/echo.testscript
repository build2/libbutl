test.arguments = "echo"

: string
:
$* foo >foo

: strings
:
$* foo bar >"foo bar"

: big
:
: Echo a big string (about 100K) to test that the builtin is asynchronous.
:
{
  s="--------------------------------";
  s="$s$s$s$s$s$s$s$s$s$s$s$s$s$s$s$s";
  s="$s$s$s$s$s$s$s$s$s$s$s$s$s$s$s$s";
  s="$s$s$s$s$s$s$s$s$s$s$s$s$s$s$s$s";
  test.options += -i; # Pass the echo argument via the driver's stdin.
  $* <"$s" | cat >"$s"
}
