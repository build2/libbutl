cxx.std = latest

using cxx

hxx{*}: extension = hxx  # We also have .mxx; see libbutl/buildfile.
ixx{*}: extension = ixx
txx{*}: extension = txx
cxx{*}: extension = cxx

if ($cxx.class == 'msvc')
{
  cxx.poptions += -D_CRT_SECURE_NO_WARNINGS -D_SCL_SECURE_NO_WARNINGS
  cxx.coptions += /wd4251 /wd4275 /wd4800
}
